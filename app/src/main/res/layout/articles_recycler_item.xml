<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">



    <TextView android:id="@+id/articleTittleView"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              android:textStyle="italic|bold"
              android:textSize="25sp" />

    <ImageView  android:id="@+id/articleImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/articleTittleView"
                android:contentDescription="articleimage"/>

    <TextView android:id="@+id/articleAbstractView"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toBottomOf="@id/articleImageView"
              android:textSize="18sp"
    />

    <TextView
            android:id="@+id/showMoreView"
            app:layout_constraintTop_toBottomOf="@id/articleAbstractView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show more..."
            android:textSize="20sp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>

